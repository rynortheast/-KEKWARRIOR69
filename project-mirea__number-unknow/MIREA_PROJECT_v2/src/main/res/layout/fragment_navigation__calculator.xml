<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navigation__calculator">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="374dp"
            android:layout_height="566dp"
            android:animateLayoutChanges="false"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultField">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="83dp">

                        <Button
                            android:id="@+id/btnOne"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onNumberClick"
                            android:text="1"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnTwo"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="#939292"
                            android:onClick="onNumberClick"
                            android:text="2"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnTree"
                            android:layout_width="126dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="#939292"
                            android:onClick="onNumberClick"
                            android:text="3"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btnFour"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onNumberClick"
                            android:text="4"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnFive"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onNumberClick"
                            android:text="5"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnSix"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onNumberClick"
                            android:text="6"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btnSeven"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onNumberClick"
                            android:text="7"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnEight"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onNumberClick"
                            android:text="8"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnNine"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onNumberClick"
                            android:text="9"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btnSum"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onOperationClick"
                            android:text="+"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnSub"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onOperationClick"
                            android:text="-"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnEau"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:backgroundTint="#939292"
                            android:onClick="onOperationClick"
                            android:text="="
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btnMult"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onOperationClick"
                            android:text="*"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnDivi"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onOperationClick"
                            android:text="/"
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnAC"
                            android:layout_width="123dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#939292"
                            android:onClick="onNumberClick"
                            android:text=","
                            android:textColor="#3C3B3B"
                            android:textSize="24sp" />

                    </TableRow>
                </TableLayout>

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/numberField"
            android:layout_width="138dp"
            android:layout_height="127dp"
            android:inputType="phone"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454" />

        <TextView
            android:id="@+id/operationField"
            android:layout_width="74dp"
            android:layout_height="39dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/resultField"
            app:layout_constraintStart_toEndOf="@+id/numberField"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resultField"
            android:layout_width="138dp"
            android:layout_height="127dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/operationField"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>